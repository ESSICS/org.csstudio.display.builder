<?xml version="1.0" encoding="UTF-8"?>
<display version="1.0.0">
  <name>Example</name>
  <macros>
    <FILE>main_embedded.opi</FILE>
    <INSET>10</INSET>
    <SHOW>false</SHOW>
    <TEXT>Hello from main display</TEXT>
  </macros>
  <width>600</width>
  <height>500</height>
  <widget type="group" version="2.0.0">
    <name>Group in Main Display</name>
    <macros>
      <SHOW>true</SHOW>
    </macros>
    <x>10</x>
    <y>10</y>
    <width>500</width>
    <height>502</height>
    <widget type="label" version="2.0.0">
      <name>Hello</name>
      <y>4</y>
      <height>15</height>
      <text>$(TEXT)</text>
    </widget>
    <widget type="label" version="2.0.0">
      <name>Hello2</name>
      <x>200</x>
      <y>4</y>
      <height>15</height>
      <text>Some text</text>
    </widget>
    <widget type="embedded" version="2.0.0">
      <name>Embed 1</name>
      <macros>
        <CONTAINER>Embedded Display</CONTAINER>
      </macros>
      <x>10</x>
      <y>30</y>
      <width>300</width>
      <height>200</height>
      <file>main_embedded.opi</file>
    </widget>
    <widget type="action_button" version="2.0.0">
      <name>Action 1</name>
      <macros>
        <CONTAINER>Button</CONTAINER>
      </macros>
      <x>10</x>
      <y>350</y>
      <height>45</height>
      <text>Other</text>
      <actions>
        <action type="open_display">
          <file>$(FILE)</file>
          <macros>
            <CONTAINER>Action</CONTAINER>
          </macros>
          <target>replace</target>
        </action>
      </actions>
    </widget>
    <widget type="textentry" version="2.0.0">
      <name>Text 1</name>
      <x>10</x>
      <y>422</y>
      <width>136</width>
      <height>26</height>
      <pv_name>ramp</pv_name>
    </widget>
    <widget type="action_button" version="2.0.0">
      <name>Action 2</name>
      <x>146</x>
      <y>350</y>
      <height>45</height>
      <text>Reset</text>
      <actions>
        <action type="write_pv">
          <pv_name>ramp</pv_name>
          <value>0</value>
        </action>
      </actions>
    </widget>
    <widget type="led" version="2.0.0">
      <name>LED</name>
      <x>314</x>
      <y>371</y>
      <width>22</width>
      <height>24</height>
      <off_color>
        <color name="Off" red="60" green="100" blue="60">
        </color>
      </off_color>
      <on_color>
        <color name="On" red="0" green="255" blue="0">
        </color>
      </on_color>
    </widget>
  </widget>
  <widget type="tab" version="2.0.0">
    <name>Tab</name>
    <x>70</x>
    <y>680</y>
    <width>340</width>
    <height>260</height>
  </widget>
</display>
