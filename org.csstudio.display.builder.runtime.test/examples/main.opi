<?xml version="1.0" encoding="UTF-8"?>
<display version="1.0.0">
  <name>Display</name>
  <width>1400</width>
  <height>1000</height>
  
  <macros>
    <INSET>10</INSET>
    <TEXT>Hello from main display</TEXT>
    <SHOW>true</SHOW>
  </macros>

  <widget type="group" version="1.0.0">
    <name>Group in Main Display</name>
    <x>$(INSET)</x>
    <y>$(INSET)</y>
    <width>500</width>
    <height>400</height>
    <widget type="label" version="1.0.0">
      <name>Hello</name>
      <y>4</y>
      <width>15</width>
      <height>15</height>
      <text>$(TEXT)</text>
      <visible>$(SHOW)</visible>
    </widget>
  </widget>
 
</display>
